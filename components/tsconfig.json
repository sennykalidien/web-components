{
  "compilerOptions": {
      "baseUrl": "./",
      "strict": true,
      "experimentalDecorators": true,
      "declaration": true,
      "downlevelIteration": true,
      "outDir": "./dist",
      "module": "esnext",
      "moduleResolution": "Node",
      "target": "es5",
      "plugins": [
        {
          "name": "ts-lit-plugin"
        }
      ]
  },
  "include": [
    "**/*.ts"
  ]
}